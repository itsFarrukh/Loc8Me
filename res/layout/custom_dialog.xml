<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/DateEt"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/setDateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/DateEt"
        android:text="Set Date" />

    <EditText
        android:id="@+id/startTimeEt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setDateBtn" />

    <Button
        android:id="@+id/setStartTimeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setDateBtn"
        android:layout_toRightOf="@+id/startTimeEt"
        android:text="Start Time" />

    <EditText
        android:id="@+id/stopTimeEt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startTimeEt" />

    <Button
        android:id="@+id/setStopTimeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startTimeEt"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/stopTimeEt"
        android:text="Stop Time" />

    <Button
        android:id="@+id/setValueBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setStopTimeBtn"
        android:layout_marginTop="20dp"
        android:text="Submit" />

</RelativeLayout>